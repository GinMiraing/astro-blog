---
interface Props {
  link: string;
  avatar: string;
  name: string;
  description: string;
}

const { link, avatar, name, description } = Astro.props;
---

<a
  class="hover:bg-hover block transition-colors rounded-sm"
  referrerpolicy="no-referrer"
  target="_blank"
  href={link}
>
  <div class="flex space-x-4 p-4">
    <div class="w-12 h-12 rounded-full shrink-0 overflow-hidden">
      <img src={avatar} alt={avatar} class="object-cover w-full h-full" />
    </div>
    <div class="flex flex-col">
      <div class="sm:text-base text-sm font-bold">{name}</div>
      <div class="text-xs sm:text-sm mt-1 line-clamp-2">
        {description}
      </div>
    </div>
  </div>
</a>
