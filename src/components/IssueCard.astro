---
import Image from "@/components/Image.astro";

interface Props {
  issue: {
    message: string;
    author: string;
    id: number;
    time: string;
    avatar: string;
    picture?: string;
  };
}

const { issue } = Astro.props;
---

<div class="w-full flex py-4">
  <div class="overflow-hidden rounded-full w-12 h-12">
    <Image withFancyBox={false} src={issue.avatar} width="100" height="100" />
  </div>
  <div class="flex flex-col ml-4 pt-2 w-full">
    <div class="flex items-center justify-between text-sm">
      <div class="space-x-4 text-xs sm:text-sm">
        <span>{issue.time}</span>
        <span class="border px-1 rounded text-pink bg-rose-100 border-rose-300"
          >{issue.author}</span
        >
      </div>
      <div class="text-xs">
        {`# ${issue.id}`}
      </div>
    </div>
    <p class="text-sm/8 sm:text-base/8 mt-2">{issue.message}</p>
    {
      issue.picture && (
        <div class="h-32 mt-2 w-32 rounded-sm overflow-hidden">
          <Image withFancyBox={true} src={issue.picture} />
        </div>
      )
    }
  </div>
</div>
