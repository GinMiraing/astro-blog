---
import Image from "@/components/Image/index.astro";

interface Props {
  issue: {
    message: string;
    author: string;
    id: number;
    time: string;
    avatar: string;
  };
}

const { issue } = Astro.props;
---

<div class="w-full flex items-center py-4">
  <div class="overflow-hidden rounded-full w-12 h-12">
    <Image withFancyBox={false} src={issue.avatar} width="100" height="100" />
  </div>
  <div class="flex flex-col ml-4 pt-2 w-full">
    <div class="flex items-center justify-between text-sm">
      <div class="space-x-4">
        <span>{issue.time}</span>
        <span>{issue.author}</span>
      </div>
      <div>
        {`# ${issue.id}`}
      </div>
    </div>
    <p class="mt-2">{issue.message}</p>
  </div>
</div>
