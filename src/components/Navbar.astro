---
import NavbarItem from "@/components/NavbarItem.astro";

interface Props {
  select: number;
}

const { select } = Astro.props;

const itemList = [
  {
    title: "主页",
    link: "/",
  },
  {
    title: "文章",
    link: "/post/1",
  },
  {
    title: "说说",
    link: "/issue/1",
  },
];
---

<div class="w-full hidden sm:flex space-x-4 my-4">
  {
    itemList.map((item, index) => (
      <NavbarItem
        title={item.title}
        link={item.link}
        active={index === select ? true : false}
      />
    ))
  }
</div>
