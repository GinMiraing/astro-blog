---
import { BlogName, LinksItems, LinksPageProps } from "@/config";
import Layout from "@/layouts/Layout.astro";
import LinksItem from "@/components/LinksItem.astro";
import PageBanner from "@/components/Banner/PageBanner.astro";
---

<Layout title={`${BlogName} - ${LinksPageProps.title}`}>
  <main
    class="sm:mt-24 mt-16 sm:min-h-0 min-h-main mx-0 sm:mx-16 lg:mx-auto max-w-4xl shadow-lg rounded-sm bg-primary"
  >
    <PageBanner
      title={LinksPageProps.title}
      description={LinksPageProps.description}
      imgsrc={LinksPageProps.banner}
      select={3}
    />
    <div class="content px-4 sm:px-12 pb-6 w-full">
      <div class="w-full my-6 grid grid-cols-1 sm:grid-cols-2 mt-4 gap-4">
        {
          LinksItems.map((item) => (
            <LinksItem
              link={item.link}
              avatar={item.avatar}
              name={item.name}
              description={item.description}
            />
          ))
        }
      </div>
    </div>
  </main>
</Layout>
